{
  "format_version": "1.21.82",
  "minecraft:entity": {
    "description": {
      "identifier": "crs_mf:resource_chicken",
      "is_spawnable": true,
      "is_summonable": true,
      "properties": {
        "crs_mf:saturation": {
          "type": "int",
          "range": [0, 100],
          "default": 50,
          "client_sync": true
        },
        "crs_mf:next_lay_attempt": {
          "type": "int",
          "default": 300,
          "range": [0, 60000],
          "client_sync": true
        }
      }
    },
    "component_groups": {
      "crs_mf:resource_chicken_baby": {
        "minecraft:is_baby": {},
        "minecraft:scale": {
          "value": 0.5
        },
        "minecraft:ageable": {
          "duration": 1200,
          "feed_items": "crs_mf:chicken_feed",
          "grow_up": {
            "event": "crs_mf:age_up",
            "target": "self"
          }
        }
      },
      "crs_mf:resource_chicken_adult": {
        "minecraft:interact": {
          "interactions": [
            {
              "on_interact": {
                "event": "crs_mf:debug_interact",
                "target": "self"
              }
            }
          ]
        }
      },
      "crs_mf:base_variant": {
        "minecraft:variant": {
          "value": 0
        }
      },
      "crs_mf:stone_variant": {
        "minecraft:variant": {
          "value": 1
        }
      },
      "crs_mf:zombie_variant": {
        "minecraft:variant": {
          "value": 2
        }
      }
    },
    "components": {
      "minecraft:physics": {}
    },
    "events": {
      "crs_mf:age_up": {
        "sequence": [
          {
            "remove": {
              "component_groups": ["crs_mf:resource_chicken_baby"]
            }
          },
          {
            "add": {
              "component_groups": ["crs_mf:resource_chicken_adult"]
            }
          }
        ]
      },
      "crs_mf:transform_to_stone": {
        "sequence": [
          {
            "remove": {
              "component_groups": ["crs_mf:base_variant"]
            }
          },
          {
            "add": {
              "component_groups": ["crs_mf:stone_variant"]
            }
          }
        ]
      },
      "minecraft:entity_spawned": {
        "sequence": [
          {
            "add": {
              "component_groups": ["crs_mf:base_variant"]
            }
          },
          {
            "randomize": [
              {
                "weight": 1,
                "add": {
                  "component_groups": ["crs_mf:resource_chicken_baby"]
                }
              },
              {
                "weight": 9,
                "add": {
                  "component_groups": ["crs_mf:resource_chicken_adult"]
                }
              }
            ]
          }
        ]
      },
      "minecraft:entity_born": {
        "add": {
          "component_groups": ["crs_mf:resource_chicken_baby"]
        }
      },
      "crs_mf:debug_interact": {
        "sequence": []
      }
    }
  }
}
